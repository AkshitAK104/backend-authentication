<!-- Custom Styling -->
<style>
.hero-banner {
  background-size: cover;
  background-position: center;
  position: relative;
}
.glass-card {
  background: rgba(255,255,255,0.18);
  border-radius: 25px;
  box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.15);
  backdrop-filter: blur(8px);
  border: 1px solid rgba(255,255,255,0.25);
  color: #222;
  max-width: 600px;
  margin: 0 auto;
}
.product-card {
  transition: transform 0.25s, box-shadow 0.25s;
  cursor: pointer;
  background: #fff;
  border-radius: 18px;
  overflow: hidden;
  position: relative;
}
.product-card:hover {
  transform: translateY(-10px) scale(1.03);
  box-shadow: 0 12px 40px rgba(76, 110, 245, 0.15);
  z-index: 2;
}
.product-img {
  transition: filter 0.3s;
}
.product-card:hover .product-img {
  filter: brightness(0.92) blur(1px);
}
.card-overlay {
  position: absolute;
  top: 0; left: 0; right: 0; bottom: 0;
  background: rgba(118, 75, 162, 0.65);
  opacity: 0;
  transition: opacity 0.25s;
  pointer-events: none;
}
.product-card:hover .card-overlay {
  opacity: 1;
  pointer-events: auto;
}
.badge-danger, .badge-success, .badge-warning {
  font-size: 1em;
  padding: 0.6em 1em;
  border-radius: 1em;
  box-shadow: 0 2px 8px rgba(0,0,0,0.12);
}
.quick-view-btn {
  font-size: 0.9em;
}
@media (max-width: 767px) {
  .glass-card { padding: 2rem 1rem; }
  .hero-banner { min-height: 40vh; }
}
</style>

